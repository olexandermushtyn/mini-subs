{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["ES2021"],
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "rootDir": "src",
    "outDir": "dist",

    "declaration": true,
    "declarationMap": true
  },
  "include": ["src/**/*.ts"]
}
